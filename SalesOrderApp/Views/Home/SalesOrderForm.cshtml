@model SoOrderViewModel

@{
    ViewData["Title"] = "Sales Order";
}

<h2>@(Model.SoOrderId <= 0 ? "Create Sales Order" : "Edit Sales Order")</h2>

<form asp-action="Edit" method="post" id="salesOrderForm">
    @Html.HiddenFor(m => m.SoOrderId, new { id = "SoOrderId" })

    <div class="mb-3">
        <label asp-for="OrderNo" class="form-label">Order Number</label>
        <input asp-for="OrderNo" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="OrderDate" class="form-label">Order Date</label>
        <input asp-for="OrderDate" type="date" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ComCustomerId" class="form-label">Customer</label>
        <input asp-for="ComCustomerId" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <h4>Order Items</h4>
    <table class="table table-bordered" id="itemsTable">
        <thead class="table-light">
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr data-item-id="@item.SoItemId">
                    <td><input name="ItemName" class="form-control" value="@item.ItemName" readonly /></td>
                    <td><input name="Quantity" type="number" class="form-control" value="@item.Quantity" readonly /></td>
                    <td><input name="Price" type="number" step="0.01" class="form-control" value="@item.Price" readonly /></td>
                    <td>
                        <button type="button" class="btn btn-success saveBtn d-none">Save</button>
                        <button type="button" class="btn btn-secondary cancelEditBtn d-none">Cancel</button>
                        <button type="button" class="btn btn-warning editBtn">Edit</button>
                        <button type="button" class="btn btn-danger deleteBtn">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-primary" id="addItemBtn">Add Item</button>

    <hr />
    <button type="submit" class="btn btn-success mt-3">Save Order</button>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        let editingRow = null;

        function enableEditMode(row) {
            row.find('input').prop('readonly', false);
            row.find('.editBtn, .deleteBtn').hide();
            row.find('.saveBtn, .cancelEditBtn').removeClass('d-none');
            editingRow = row;
        }

        function disableEditMode(row) {
            row.find('input').prop('readonly', true);
            row.find('.editBtn, .deleteBtn').show();
            row.find('.saveBtn, .cancelEditBtn').addClass('d-none');
            editingRow = null;
        }

        function getItemData(row) {
            return {
                SoItemId: row.data("item-id") ?? 0,
                ItemName: row.find('input[name="ItemName"]').val(),
                Quantity: parseInt(row.find('input[name="Quantity"]').val()),
                Price: parseFloat(row.find('input[name="Price"]').val()),
                SoOrderId: parseInt($('#SoOrderId').val())
            };
        }

        $(document).on('click', '.editBtn', function () {
            if (editingRow) {
                alert("Only one item can be edited at a time.");
                return;
            }
            enableEditMode($(this).closest('tr'));
        });

        $(document).on('click', '.cancelEditBtn', function () {
            let row = $(this).closest('tr');
            row.find('input').each(function () {
                this.value = this.defaultValue;
            });
            disableEditMode(row);
        });

        $(document).on('click', '.saveBtn', function () {
            let row = $(this).closest('tr');
            let itemData = getItemData(row);

            $.ajax({
                url: '/Home/SaveItem',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(itemData),
                success: function (result) {
                    if (result.success) {
                        // Save default values after save
                        row.find('input').each(function () {
                            this.defaultValue = this.value;
                        });

                        row.attr('data-item-id', result.itemId);
                        disableEditMode(row);
                    } else {
                        alert(result.message);
                    }
                },
                error: function () {
                    alert("Error saving item.");
                }
            });
        });

        $(document).on('click', '.deleteBtn', function () {
            let row = $(this).closest('tr');
            // Optional: Add server-side delete logic here
            row.remove();
        });

        $('#addItemBtn').on('click', function () {
            if (editingRow) {
                alert("Save or cancel the current item before adding a new one.");
                return;
            }

            let newRow = $(`
                <tr>
                    <td><input name="ItemName" class="form-control" /></td>
                    <td><input name="Quantity" type="number" class="form-control" /></td>
                    <td><input name="Price" type="number" step="0.01" class="form-control" /></td>
                    <td>
                        <button type="button" class="btn btn-success saveBtn">Save</button>
                        <button type="button" class="btn btn-secondary cancelEditBtn">Cancel</button>
                        <button type="button" class="btn btn-warning editBtn d-none">Edit</button>
                        <button type="button" class="btn btn-danger deleteBtn d-none">Delete</button>
                    </td>
                </tr>
            `);

            $('#itemsTable tbody').append(newRow);
            enableEditMode(newRow);
        });
    </script>
}
